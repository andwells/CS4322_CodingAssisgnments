package controller.command;
import model.TextEditorModel;

public class InsertTextCommand implements TextCommand{
    public static final String action = "bold";
    TextEditorModel model;
    int start, length;
    boolean isBold;
    public InsertTextCommand(TextEditorModel m, int s, int l, StyleList insertedStyles){
        model = m;
        start = s;
        length = l;
        
    }
    @Override
    public void execute() {
        model.setBold(start, length, isBold);
    }

    @Override
    public void undo() {
        model.setBold(start, length, !isBold);
    }
    
    @Override
    public void redo() {
        execute();
    }
    
    @Override
    public String toString() {
    	String msg = String.format("BoldCommand: start=%d, length=%d, isBold=%b", start, length, isBold);
    	return msg;
    }
}